<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/best_offer_linear"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="top"
                    android:layout_margin="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp">

                    <ImageView
                        android:id="@+id/iv_home_restaurant_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/image"
                        android:scaleType="center" />

                        <LinearLayout
                            android:id="@+id/lay_best_offers_vendor_status_over"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_ar_vendor_image"
                            android:orientation="vertical"
                            android:visibility="gone" />
                        <!--  android:background="@color/transparent_black_75"-->

                        <TextView
                            android:id="@+id/tv_best_offers_image_over_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="visible" />

                    </FrameLayout>


                </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:gravity="center"

                android:orientation="horizontal">
                <!--  android:background="@color/grey_300"-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_home_restaurant_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center|start"
                        android:maxLines="2"
                        android:textColor="@color/home_session_prefix_color"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="end|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_home_delivery_time_image"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@drawable/baseline_access_time_black_18dp"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY" />

                    <TextView
                        android:padding="@dimen/_2sdp"
                        android:background="@drawable/banner_btn_non_selected"
                        android:text="5.6"
                        android:id="@+id/tv_rating_statement"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end|center"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/home_session_prefix_color"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_restaurant_sub_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:textColor="@color/grey_700"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:gravity="start|center"
                android:orientation="horizontal">

                <TextView
                    android:text="123456987"
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/home_session_prefix_color"
                    android:textSize="@dimen/_9sdp" />

                <LinearLayout
                    android:id="@+id/lay_rating_statement_split"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:background="@drawable/home_best_offer_grey_dot"
                        android:contentDescription="@string/image"
                        android:scaleType="fitXY" />

                </LinearLayout>

                <TextView
                    android:text="1223"
                    android:id="@+id/tv_home_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center|end"
                    android:textColor="@color/home_bo_within_color"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:gravity="start|center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_offer_content_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:contentDescription="@string/image"
                    android:scaleType="fitXY" />

                <TextView
                    android:text="@string/there_is_no_item_found"
                    android:background="@drawable/bg_primary_color_curve_right"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:id="@+id/tv_offer_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>